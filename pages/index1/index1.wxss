/* pages/index1/index1.wxss */

/* index */
/* index头部 */
.in_box {
  width: 96%;
  margin: 0 auto;
}
.index_top {
  width: 100%;
  padding: 10rpx 0 20rpx 0;
  overflow: hidden;
}
.logo {
  width: 321rpx;
  height: 90rpx;
  float: left;
}
.top_right {
  width: 350rpx;
  float: right;
}
.top_r_l {
  width: 250rpx;
  float: left;
}
.phone1 {
  float: right;
  overflow: hidden;
  width: 185rpx;
  height: 45rpx;
  background-image: linear-gradient(to right, #c2a439, #eec329);
  text-align: center;
  margin-bottom: 10rpx;
}
.phone1 p {
  font-size: 22rpx;
  color: #fff;
  line-height: 45rpx;
}
.phone2 {
  overflow: hidden;
  width: 100%;
  height: 40rpx;
}
.phone2_img {
  width: 22rpx;
  height: 27rpx;
  float: left;
  margin-top: 5rpx;
}
.phone2_wen {
  margin-left: 15rpx;
  float: left;
}
.phone2_wen p {
  font-size: 32rpx;
  color: #333;
}
.top_r_r {
  width: 55rpx;
  height: 47rpx;
  float: right;
  margin-top: 25rpx;
}

/* 导航 */
.nav1{
  width:100%;
  height:900rpx;
  background:rgba(0, 0, 0, 0.45);
}
.nav1_nr{
  overflow: hidden;
  padding-top:40rpx;
}
.nav1_nr ul li{
    overflow: hidden;
    display: block;
    border-bottom:rgba(255, 255, 255, 0.3) 1rpx solid;
    padding:30rpx 0;
}
.nav1_nr ul li:hover{
  background:#e4433b;
}
.nav1_nr  ul li p{
  font-size:32rpx;
  color:#fff;
  display: block;
  text-align: center;
}